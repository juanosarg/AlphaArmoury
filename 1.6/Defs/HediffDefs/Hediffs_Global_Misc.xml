<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
	<HediffDef>
		<defName>AArmoury_Invisibility</defName>
		<label>psychic invisibility</label>
		<description>This person has psychically shifted their skin tones to camouflage in almost any surroundings.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<scenarioCanAdd>false</scenarioCanAdd>
		<maxSeverity>1.0</maxSeverity>
		<isBad>false</isBad>
		<comps>
			<li Class="HediffCompProperties_Invisibility">
				<visibleToPlayer>true</visibleToPlayer>
			</li>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-6</severityPerDay>
				<showDaysToRecover>true</showDaysToRecover>
			</li>
			<li Class="HediffCompProperties_DisappearsOnDeath"/>
		</comps>
	</HediffDef>
	
	<HediffDef ParentName="DiseaseBase">
		<defName>AArmoury_Electric</defName>
		<description>A dangerous electric shock. It might damage the heart, and higher intensities increase the possibility of a heart attack.</description>
		<label>electric shock</label>
		<isBad>true</isBad>
		<comps>
			<li Class="HediffCompProperties_Immunizable">
				<severityPerDayNotImmune>-2</severityPerDayNotImmune>
			</li>
		</comps>
		<stages>
			<li>
				<label>initial</label>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.9</setMax>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>HeartAttack</hediff>
						<mtbDays>10</mtbDays>
						<partsToAffect>
							<li>Heart</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<label>shocked</label>
				<minSeverity>0.2</minSeverity>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.6</setMax>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>HeartAttack</hediff>
						<mtbDays>5</mtbDays>
						<partsToAffect>
							<li>Heart</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<label>very shocked</label>
				<minSeverity>0.5</minSeverity>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.4</setMax>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>HeartAttack</hediff>
						<mtbDays>1</mtbDays>
						<partsToAffect>
							<li>Heart</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<label>paralysed</label>
				<minSeverity>0.8</minSeverity>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.1</setMax>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>HeartAttack</hediff>
						<mtbDays>0.5</mtbDays>
						<partsToAffect>
							<li>Heart</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
		</stages>
	</HediffDef>
	<HediffDef ParentName="DiseaseBase">
		<defName>AArmoury_Petrification</defName>
		<description>The victim's skin is hardening and turning into brittle stone. This condition is reversible and will naturally dissipate after a few hours, but if it reaches a severity of 1 it will kill its victim.</description>
		<label>petrification</label>
		<lethalSeverity>1</lethalSeverity>
		<makesSickThought>true</makesSickThought>
		<isBad>false</isBad>
		<comps>
			<li Class="HediffCompProperties_Disappears">
				<disappearsAfterTicks>
					<min>15000</min>
					<max>20000</max>
				</disappearsAfterTicks>
			</li>
		</comps>
		<stages>
			<li>
				<label>initial</label>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.9</setMax>
					</li>
				</capMods>
			</li>
			<li>
				<label>stiff joints</label>
				<minSeverity>0.2</minSeverity>

				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.6</setMax>

					</li>
					<li>
						<capacity>Moving</capacity>
						<setMax>0.75</setMax>
					</li>
				</capMods>
			</li>
			<li>
				<label>rocky skin</label>
				<minSeverity>0.5</minSeverity>

				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.5</setMax>
					</li>
					<li>
						<capacity>Moving</capacity>
						<setMax>0.5</setMax>
					</li>
				</capMods>
			</li>
			<li>
				<label>brittle bones</label>
				<minSeverity>0.8</minSeverity>

				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.4</setMax>
					</li>
					<li>
						<capacity>Moving</capacity>
						<setMax>0.2</setMax>
					</li>
				</capMods>
			</li>
			<li>
				<label>turned to stone</label>
				<minSeverity>0.99</minSeverity>

				
			</li>
		</stages>
	</HediffDef>
	<HediffDef ParentName="DiseaseBase">
		<defName>AArmoury_Paralysis</defName>
		<description>A fast acting toxin is coursing through this creature's veins, paralyzing their muscles. It will wear off after a while.</description>
		<label>paralysis</label>
		<isBad>false</isBad>
		<comps>
			<li Class="HediffCompProperties_Disappears">
				<disappearsAfterTicks>
					<min>1000</min>
					<max>1000</max>
				</disappearsAfterTicks>
			</li>
			
		</comps>
		<stages>
			<li>
				<label>initial</label>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.9</setMax>
					</li>
				</capMods>
			</li>
			<li>
				<label>stunned</label>
				<minSeverity>0.2</minSeverity>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.6</setMax>
					</li>
				</capMods>
			</li>
			<li>
				<label>very stunned</label>
				<minSeverity>0.5</minSeverity>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.4</setMax>
					</li>
				</capMods>
			</li>
			<li>
				<label>paralysed</label>
				<minSeverity>0.8</minSeverity>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.1</setMax>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>
</Defs>