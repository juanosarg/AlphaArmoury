	<ThingDef ParentName="AArmoury_WeaponKitBase">
		<defName>AArmoury_WeaponKit</defName>
		<label>weapon tweaking kit</label>
		<description>A weapon kit for a specific weapon modifier. It can be used on an unique weapon to add a trait to it, as long as the weapon supports it.</description>
		<thingClass>AlphaArmoury.WeaponKit</thingClass>
		<tickerType>Rare</tickerType>
		<useHitPoints>true</useHitPoints>
		<stackLimit>1</stackLimit>
		<canDeteriorateUnspawned>true</canDeteriorateUnspawned>
		<deteriorateFromEnvironmentalEffects>false</deteriorateFromEnvironmentalEffects>
		<graphicData>
			<texPath>Things/Item/AArmoury_WeaponTweakingKit</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<statBases>
			<MarketValue>850</MarketValue>
			<DeteriorationRate>5</DeteriorationRate>
		</statBases>
		<techLevel>Industrial</techLevel>
		<thingSetMakerTags>
			<li>NotForGuests</li>
			<li>RewardStandardHighFreq</li>
		</thingSetMakerTags>
		<thingCategories>
			<li>AArmoury_WeaponKits</li>
		</thingCategories>
		<comps>
			<li Class="CompProperties_Targetable">
				<compClass>AlphaArmoury.CompTargetable_UniqueWeapons</compClass>
			</li>
			<li Class="CompProperties_Usable">
				<useLabel>Use {0_label}</useLabel>
				<useJob>AArmoury_UseWeaponKit</useJob>
				<showUseGizmo>true</showUseGizmo>
				<useDuration>600</useDuration>
			</li>
			<li Class="AlphaArmoury.CompProperties_UseEffectWeaponKit">
				
			</li>
		</comps>
		<modExtensions>
			<li Class="AlphaArmoury.WeaponKitExtension">
				<commonality>1</commonality>
			</li>
		</modExtensions>
	</ThingDef>
