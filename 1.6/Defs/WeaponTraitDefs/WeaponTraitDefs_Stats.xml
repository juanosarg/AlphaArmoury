<Defs>
	<WeaponTraitDef>
		<defName>AArmoury_RevolverScope</defName>
		<label>revolver scope</label>
		<description>This revolver is outfitted with a scope, allowing it to fire farther.</description>
		<commonality>0.4</commonality>
		<weaponCategory>AArmoury_Gun_Revolver_Unique</weaponCategory>
		<exclusionTags>
			<li>Scope</li>
		</exclusionTags>
		<statOffsets>
			<RangedWeapon_RangeMultiplier>0.2</RangedWeapon_RangeMultiplier>
			<MarketValue>20</MarketValue>
		</statOffsets>
		<traitAdjectives>
			<li>scoped</li>
			<li>farsight</li>
		</traitAdjectives>
		<modExtensions>
			<li Class="VEF.Weapons.WeaponTraitDefExtension">
				<graphicOverridePriority>20</graphicOverridePriority>
				<graphicOverrides>
					<li>
						<key>Gun_Revolver_Unique</key>
						<value>
							<texPath>Things/Weapon/AArmoury_RevolverScope</texPath>
							<graphicClass>Graphic_Random</graphicClass>
							<shaderType>CutoutComplex</shaderType>
						</value>
					</li>
				</graphicOverrides>
			</li>
		</modExtensions>
	</WeaponTraitDef>
	<WeaponTraitDef>
		<defName>AArmoury_DoubleTap</defName>
		<label>double-tap cylinder</label>
		<description>Turns the revolver’s single-shot action into a short burst, trading some accuracy for faster suppression.</description>
		<commonality>0.5</commonality>
		<weaponCategory>AArmoury_Gun_Revolver_Unique</weaponCategory>
		<statOffsets>
			<MarketValue>150</MarketValue>
		</statOffsets>
		<burstShotCountMultiplier>2</burstShotCountMultiplier>
		<statFactors>
			<AccuracyTouch>0.8</AccuracyTouch>
			<AccuracyShort>0.8</AccuracyShort>
			<AccuracyMedium>0.8</AccuracyMedium>
			<AccuracyLong>0.8</AccuracyLong>
		</statFactors>
		<traitAdjectives>
			<li>double-tap</li>
			<li>burst</li>
		</traitAdjectives>
		<modExtensions>
			<li Class="VEF.Weapons.WeaponTraitDefExtension">
				<graphicOverridePriority>20</graphicOverridePriority>
				<graphicOverrides>
					<li>
						<key>Gun_Revolver_Unique</key>
