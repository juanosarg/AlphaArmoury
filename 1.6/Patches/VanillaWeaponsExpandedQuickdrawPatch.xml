<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Weapons Expanded - Quickdraw</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<!-- Weapon kits -->
				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/ThingDef[defName = "VWE_Gun_AutomaticPistol"]</xpath>
					<value>
						<li Class="AlphaArmoury.UniqueConversionExtension">
							<uniqueWeaponEquivalent>VWE_Gun_AutomaticPistol_Unique</uniqueWeaponEquivalent>
						</li>
					</value>
				</li>
				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/ThingDef[defName = "VWE_Gun_BullpupRifle"]</xpath>
					<value>
						<li Class="AlphaArmoury.UniqueConversionExtension">
							<uniqueWeaponEquivalent>VWE_Gun_BullpupRifle_Unique</uniqueWeaponEquivalent>
						</li>
					</value>
				</li>
				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/ThingDef[defName = "VWE_Gun_BullpupDMR"]</xpath>
					<value>
						<li Class="AlphaArmoury.UniqueConversionExtension">
							<uniqueWeaponEquivalent>VWE_Gun_BullpupDMR_Unique</uniqueWeaponEquivalent>
						</li>
					</value>
				</li>
				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/ThingDef[defName = "VWE_Gun_PDW"]</xpath>
					<value>
						<li Class="AlphaArmoury.UniqueConversionExtension">
							<uniqueWeaponEquivalent>VWE_Gun_PDW_Unique</uniqueWeaponEquivalent>
						</li>
					</value>
				</li>
				
				<!-- Weapon trait categories -->
			
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName = "VWE_Gun_AutomaticPistol_Unique"]/comps/li[@Class="CompProperties_UniqueWeapon"]/weaponCategories</xpath>
					<value>
						<li>AArmoury_AllButBeamAndLauncher</li>
						<li>AArmoury_All</li>
						<li>AArmoury_SingleBulletFiring</li>
						<li>AArmoury_AllButBows</li>
					</value>
				</li>
			
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName = "VWE_Gun_PDW_Unique"]/comps/li[@Class="CompProperties_UniqueWeapon"]/weaponCategories</xpath>
					<value>
						<li>AArmoury_Machineguns</li>
						<li>AArmoury_AllButBeamAndLauncher</li>
						<li>AArmoury_All</li>
						<li>AArmoury_AllButBows</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName = "VWE_Gun_BullpupRifle_Unique"]/comps/li[@Class="CompProperties_UniqueWeapon"]/weaponCategories</xpath>
					<value>
						<li>AArmoury_AllButBeamAndLauncher</li>
						<li>AArmoury_All</li>
						<li>AArmoury_AllButBows</li>
					</value>
				</li>
				
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName = "VWE_Gun_BullpupDMR_Unique"]/comps/li[@Class="CompProperties_UniqueWeapon"]/weaponCategories</xpath>
					<value>
						<li>AArmoury_SingleBulletFiring</li>
						<li>AArmoury_LongRangeSnipers</li>
						<li>AArmoury_AllButBeamAndLauncher</li>
						<li>AArmoury_BoltAndSnipers</li>
						<li>AArmoury_All</li>
						<li>AArmoury_AllButBows</li>
					</value>
				</li>
				
			</operations>
		</match>
	</Operation>
</Patch>